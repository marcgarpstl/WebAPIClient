@page
@model WebAppAPI.Pages.UpdateModel
@{
}


<form method="post">
    <input type="hidden" asp-for="@Model.service.Id" />
    <p>Service</p><input asp-for="@Model.service.Name" />
    <p><span asp-validation-for="@Model.service.Name"></span></p>
    <p>Price / h</p><input asp-for="@Model.service.Price" />
    <p><span asp-validation-for="@Model.service.Price"></span></p>
    <p>Desciption</p><input class="desciption" asp-for="@Model.service.Description" />
    <p><span asp-validation-for="@Model.service.Description"></span></p>
    <p>Available</p><input asp-for="@Model.service.IsAvalible" />
    <p><span asp-validation-for="@Model.service.IsAvalible"></span></p>
    <button type="submit">Update Service </button>
</form>
