@page
@using Microsoft.IdentityModel.Tokens;
@model IndexModel
@{
    ViewData["Title"] = "If you need a service, we got it";
}



<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h3><a href="/Create">Add service</a></h3>
    @foreach(Models.Service service in Model.services)
    {
        <p>Service: @service.Name</p>
        <p>Price: @service.Price / h</p>
        <p>Price: @service.Price / h</p>
        @if (service.IsAvalible == true)
        {
            <p>Avalible: Yes</p>
        }
        else
        {
            <p>Avalible: No</p>
        }
        <form method="post" asp-page-handler="Delete" asp-route-id="@service.Id">

            <button type="submit" onclick="return confirm('Are you sure you want to delete service : @service.Name')">
                Delete service
            </button>
        </form>

        <a asp-page="Update" asp-route-id="@service.Id">Update</a>


    }
</div>
