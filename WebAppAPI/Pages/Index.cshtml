@page
@using Microsoft.IdentityModel.Tokens;
@model IndexModel
@{
    ViewData["Title"] = "If you need a service, we got it";
}



<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <a href="/Create">Add service</a>
    @foreach(Models.Service service in Model.services)
    {
        <p>Service: @service.Name</p>
        <p>Price: @service.Price / h</p>
        <p>Description: @service.Description</p>
        <p>Avalible: @service.IsAvalible</p>
        <a asp-page="Update" asp-route-id="@service.Id">Update</a>
    }
</div>
